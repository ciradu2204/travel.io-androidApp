<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/wrap_content_matchParent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_height="225dp"
        android:layout_width="500dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/light_grey"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            style="@style/match_parentAll">

            <TextView
                style="@style/header3"
                android:id="@+id/title"
                android:padding="10dp"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                style="@style/wrap_content_matchParent">

                <TextView
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/category_foreground"
                    android:id="@+id/category"
                    android:drawablePadding="-15dp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    />

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/location"
                    android:text="hello"
                    android:drawablePadding="-15dp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    app:drawableStartCompat="@drawable/location_foreground" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                style="@style/wrap_content_matchParent">

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/road"
                    android:layout_height="wrap_content"
                    android:drawablePadding="-15dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    app:drawableStartCompat="@drawable/road_foreground" />

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/priority"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"
                    android:text="hello"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    app:drawableStartCompat="@drawable/circle" />

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>