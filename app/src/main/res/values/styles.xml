<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="match_parentAll" >
    <item name="android:layout_height">match_parent</item>
     <item name="android:layout_width" >match_parent</item>
    </style>

    <style name="wrap_contentAll" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="wrap_content_matchParent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="customWidth_matchParent">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="customHeight_matchParent">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="header" parent="wrap_content_matchParent">
        <item name="fontFamily">@font/abhayalibre_bold</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="header2" parent="wrap_content_matchParent">
        <item name="fontFamily">@font/abhayalibre_extrabold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="header3" parent="wrap_content_matchParent">
        <item name="fontFamily">@font/abhayalibre_extrabold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="normal" parent="wrap_content_matchParent">
        <item name="fontFamily">@font/abhayalibre_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="hint" parent="wrap_content_matchParent">
        <item name="fontFamily">@font/abhayalibre_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
    </style>


    <style name="Buttons" parent="customWidth_matchParent">
        <item name="android:cursorVisible">true</item>
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColorLink">@color/white</item>
        <item name="fontFamily">@font/abhayalibre_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="borderRound">5sp</item>
    </style>



    <style name="Divider" parent="wrap_content_matchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
         <item name="android:background">?android:attr/listDivider</item>
    </style>




</resources>